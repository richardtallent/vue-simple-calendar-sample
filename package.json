{
	"name": "vue-simple-calendar-sample",
	"version": "7.2.1",
	"private": false,
	"description": "Sample app showing off the vue-simple-calendar component",
	"author": "richardtallent <richard@tallent.us>",
	"license": "MIT",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/richardtallent/vue-simple-calendar-sample"
	},
	"scripts": {
		"dev": "vite",
		"build": "vite build"
	},
	"dependencies": {
		"vue": "^3.5.13",
		"vue-simple-calendar": "^7.2.1"
	},
	"devDependencies": {
		"@vitejs/plugin-basic-ssl": "^2.0.0",
		"@typescript-eslint/parser": "^8.28.0",
		"@vitejs/plugin-vue": "^5.2.3",
		"@vue/compiler-sfc": "^3.5.13",
		"autoprefixer": "^10.4.21",
		"eslint": "^9.23.0",
		"eslint-plugin-prettier": "^5.2.5",
		"eslint-plugin-vue": "^10.0.0",
		"postcss": "^8.5.3",
		"prettier": "^3.5.3",
		"rollup-plugin-typescript2": "^0.36.0",
		"stylelint": "^16.17.0",
		"stylelint-config-standard": "^37.0.0",
		"typescript": "^5.8.2",
		"vite": "^6.2.3"
	},
	"eslintConfig": {
		"extends": [
			"plugin:vue/vue3-essential",
			"eslint:recommended",
			"@vue/prettier"
		],
		"parserOptions": {
			"parser": "@typescript-eslint/parser"
		}
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"singleQuote": false,
		"bracketSpacing": true,
		"trailingComma": "es5",
		"printWidth": 180
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"stylelint": {
		"extends": "stylelint-config-standard",
		"exclude": [
			"dist"
		],
		"rules": {
			"no-descending-specificity": null
		}
	},
	"browserslist": [
		"defaults",
		"not IE 11",
		"maintained node versions"
	]
}
