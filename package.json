{
	"name": "vue-simple-calendar-sample",
	"version": "6.3.1",
	"private": false,
	"description": "Sample app showing off the vue-simple-calendar component",
	"author": "richardtallent <richard@tallent.us>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/richardtallent/vue-simple-calendar-sample"
	},
	"scripts": {
		"dev": "vite",
		"build": "vite build"
	},
	"dependencies": {
		"vue": "^3.2.47",
		"vue-simple-calendar": "^6.3.1"
	},
	"devDependencies": {
		"@vitejs/plugin-basic-ssl": "^1.0.1",
		"@typescript-eslint/parser": "^5.51.0",
		"@vitejs/plugin-vue": "^4.0.0",
		"@vue/compiler-sfc": "^3.2.47",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.34.0",
		"eslint-config-tabsanity": "^2.0.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-vue": "^9.9.0",
		"postcss": "^8.4.21",
		"prettier": "^2.8.4",
		"rollup-plugin-typescript2": "^0.34.1",
		"stylelint": "^15.10.1",
		"stylelint-config-standard": "^30.0.1",
		"typescript": "^4.9.5",
		"vite": "^4.1.1"
	},
	"eslintConfig": {
		"extends": [
			"plugin:vue/vue3-essential",
			"eslint:recommended",
			"@vue/prettier",
			"tabsanity"
		],
		"parserOptions": {
			"parser": "@typescript-eslint/parser"
		}
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"singleQuote": false,
		"bracketSpacing": true,
		"trailingComma": "es5",
		"printWidth": 180
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"stylelint": {
		"extends": "stylelint-config-standard",
		"exclude": [
			"dist"
		],
		"rules": {
			"indentation": "tab",
			"declaration-block-trailing-semicolon": null,
			"no-descending-specificity": null
		}
	},
	"browserslist": [
		"defaults",
		"not IE 11",
		"maintained node versions"
	]
}
